<h1>Browse by <%=@list_name%></h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Count</th>
      <th>Sort</th>
      <th>Dir</th>
      <th><%= @page %> </th>
      <th><%= @id %> </th>      
      <th><%= @limit %> </th>    
      <th><%= @is_last %> </th>          
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orangelight_browsables.each do |orangelight_name| %>
      <tr>
        <td><%= orangelight_name.label %></td>
        <td><%= orangelight_name.count %></td>
        <td><%= orangelight_name.sort %></td>
        <td><%= orangelight_name.dir %></td>
        <td><%= link_to 'Show', "#{@model}/#{orangelight_name.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% unless @page==1 %>

    <p><%= link_to 'Previous', @page_link + "page=#{@prev}" %></p>

<% end %>
<% unless @is_last %>

  <p><%= link_to 'Next', @page_link + "page=#{@next}" %></p>
<% end %>