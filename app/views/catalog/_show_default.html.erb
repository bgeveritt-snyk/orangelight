<%# default partial to display solr document fields in catalog show view -%>
<dl class="dl-horizontal  dl-invert">
  <% document_show_fields(document).each do |solr_fname, field| -%>
    <% if should_render_show_field? document, field %>
      <% if document_show_fields(document)["#{solr_fname}"].relatedor == true %>
        <% relatedor document, solr_fname %>
      <% end %>
      <%# marc relator code for authors -%>
    	<% if solr_fname == 'author_display' && render_document_show_field_value( document, :field => 'marc_relator_display') != ''%>
	    <dt class="blacklight-<%= solr_fname.parameterize %>"><%= render_document_show_field_value document, :field => 'marc_relator_display' %>:</dt>
      <%# don't display label name if alt_script -%>
      <% elsif solr_fname == 'author_vern_display' && render_document_show_field_value( document, :field => 'author_vern_display') != '' %>
        <dt></dt>    	
      <%# author is default if no marc relator, default for other fields -%>
      <% else %>
	    <dt class="blacklight-<%= solr_fname.parameterize %>"><%= render_document_show_field_label document, :field => solr_fname %></dt>
	    <% end %>

      <%# if rtl script, align right -%>
      <% if solr_fname == 'author_vern_display' && (render_document_show_field_value( document, :field => 'language_code_s') == 'ara' || render_document_show_field_value( document, :field => 'language_code_s') == 'heb') %>
        <dd class="rtl"><%= render_document_show_field_value document, :field => 'author_vern_display' %></dd>
      <% elsif solr_fname == 'electronic_access_display' %>
        <dd class="blacklight-<%= solr_fname.parameterize %>"><%= render_document_show_field_value document, :field => solr_fname %></dd>        
      <% else %>      
	    <dd class="blacklight-<%= solr_fname.parameterize %>"><%= render_document_show_field_value document, :field => solr_fname %></dd>
      <% end %>
    <% end %>
  <% end %>
</dl>

