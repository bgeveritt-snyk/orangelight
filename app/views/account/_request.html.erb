<h2 class="section-heading">Request Information</h2>
<% if (!@account.request_items.nil?) %>
  <%= form_tag('/accounts/cancel', remote: true, id: "request-cancel") do %>
    <div class="table-responsive account--requests">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Cancel?</th>
            <th>Item Title</th>
            <th>Request Expiration Date</th>
            <th>Pickup Location</th>
          </tr>
        </thead>
        <tbody>
          <% @account.request_items.each do |item| %>
            <tr>
              <td>
                <label><input type="checkbox" name="cancel_requests[]" 
                value="<%= format_hold_cancel(item) %>"> 
                Cancel</label>
              </td>
              <td><%= item["itemTitle"] %></td>
              <td>
                <%= "Position: #{item['queuePosition']}" %>
                <%= "Expires: #{format_date(item["expireDate"])}" %>
              </td>
              <td><%= item["pickuplocation"] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="form-group">
        <select class="form-control">
          <option>Cancel selected items</option>
          <option>Cancel all active requests from Princeton University Library</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Cancel Requests</button>
    </div>
  <% end %>
<% else %>
  <p>No outstanding requests</p>
<% end %>