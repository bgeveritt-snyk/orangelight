 <h2 class="section-heading">Charged Items</h2>
<% if (!@account.charged_items.nil?) %>
  <%= form_tag('/account/renew', remote: true, id: "item-renew") do %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered account--charged_items">
        <thead>
          <tr>
            <th>Renew?</th>
            <th>Item</th>
            <th>Call Number</th>
            <th>Item Type</th>
            <th>Due Date</th>
          </tr>
        </thead>
        <tbody>
          <% @account.charged_items.each do |item| %>
            <tr>
              <td>
                <% if item["renewable"] == 'true' %>
                  <label><input type="checkbox" name="rewew_items[]" 
                    value="<%= format_renew_string(item) %>"> 
                    Renew</label>
                <% else %>
                  <span>Not renewable</span>
                <% end %>
              </td>
              <td><%= item["title"] %></td>
              <td><%= item["callNumber"] %></td>
              <td><%= item["itemtype"] %></td>
              <td>
                  <em><%= item_status_to_label(item) %></em>
                  <span>&nbsp;</span>
                <%= format_date(item['dueDate']) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="form-group">
        <select class="form-control">
          <option>Renew selected items</option>
          <option>Renew all items from Princeton University Library</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Renew items</button>
    </div>
  <% end %>
<% else %>
  <p>You do not have any items out</p>
<% end %>