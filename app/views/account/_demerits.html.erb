<% if (!@account.demerits.nil?) %>
  <h2 class="section-heading">Account Demerits</h2>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <tbody>
      <% @account.demerits.each do |demerit| %>
        <% demerit.each do |key, value| %>
          <tr>
            <td><%= key.humanize %></td>
            <td><%= value %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>

<% end %>