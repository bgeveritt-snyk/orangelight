<h2 class="section-heading">Items Available for Pickup</h2>
<% if (!@account.avail_items.nil?) %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered account-available">
      <thead>
        <tr>
          <th>Item Title</th>
          <th>Request Expiration Date</th>
          <th>Pickup Location</th>
        </tr>
      </thead>
      <tbody>
        <% @account.request_items.each do |item| %>
          <tr>
            <td><%= item["itemTitle"] %></td>
            <td><%= format_date(item["expireDate"]) %></td>
            <td><%= item["pickuplocation"] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>No items available for pickup</p>
<% end %>