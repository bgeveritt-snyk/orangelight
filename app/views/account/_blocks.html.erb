<% if (!@account.borrowing_blocks.nil?) %>
  <table class="table table-striped table-bordered account--blocks">
    <thead>
      <tr>
        <td>Block group</td>
        <td>Block count</td>
        <td>Reason</td>
      </tr>
    </thead>
    <tbody>
    <% @account.borrowing_blocks.each do |block| %>
        <tr>
          <td><%= block["patronGroupName"] %></td>
          <td><%= block["blockCount"] %></td>
          <td><%= format_block_statement(block["blockReason"]) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p><%= I18n.t('blacklight.account.no_blocks') %></p>
<% end %>
